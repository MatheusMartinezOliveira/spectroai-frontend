{
  "name": "spectroai-electron",
  "version": "1.0.0",
  "description": "Spectro AI - Assistente IA Desktop",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"yarn build:main:watch\" \"yarn build:preload:watch\" \"yarn build:renderer:watch\" \"yarn start:electron\"",
    "dev:build-only": "concurrently -k \"yarn build:main:watch\" \"yarn build:preload:watch\" \"yarn build:renderer:watch\"",
    "start:electron": "wait-on dist/main/main.js dist/preload/preload/preload.js dist/renderer/index.html && electron .",
    "build": "yarn build:main && yarn build:preload && yarn build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:preload:watch": "tsc -p tsconfig.preload.json --watch",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:renderer:watch": "webpack --config webpack.renderer.config.js --watch",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "spectro"
  ],
  "author": "Spectro AI Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.5.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0"
  },
  "build": {
    "appId": "com.spectroai.app",
    "productName": "Spectro AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
